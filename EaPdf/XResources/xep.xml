	<!-- Formatter options                                       -->
	<!-- ======================================================= -->
	<options>
		<option name="LICENSE" value="license.xml"/>
		<option name="TMPDIR" value="none"/>
		<option name="BROKENIMAGE" value="images/404.gif"/>
		<option name="LOGO" value="images/logo-renderx.svg"/>
		<option name="STAMP_PNG" value="images/stamp-renderx.png"/>
		<option name="ROLE_MAP" value="rolemap.xml"/>
		<option name="ENABLE_ACCESSIBILITY" value="true"/>

		<option name="STRICTNESS" value="1"/>
		<!-- 0 relaxed, 1 normal, 2 strict -->

		<!-- Backend options -->
		<generator-options format="PDF">
			<option name="COMPRESS" value="false"/><!-- false for debugging -->
			<option name="DROP_UNUSED_DESTINATIONS" value="false"/><!-- must be false so that DPart logic works to find start and end pages of a message -->

			<!-- Set to PDF/A-3a.  XEP does not support any higher PDF version than 1.4 if using PDF/A-3. The version and PDF/A levels can be overridden in the XMP metadata during post-processing .-->
			<option name="PDF_VERSION" value="1.4"/>
			<option name="PDF_A" value="pdf-a-3a"/>
		</generator-options>

	</options>

